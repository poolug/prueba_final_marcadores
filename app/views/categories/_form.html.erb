<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, @statuses, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :category_id, "sub category" %>
    <%= form.collection_select :category_id, Category.all_children, :id, :name, include_blank: true%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
